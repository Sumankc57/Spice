            @Html.DisplayFor(modelItem =>db.TableTypes.Find(modelItem.TypeID).Name)
        </dd>
    </dl>
</div>
<div>
    <form method="post" asp-action="FinishBooking" asp-controller="TableBooking" asp-area="Admin">
        <button type="submit">
            <a class="btn btn-info "><i class="fas fa-plus"></i> Accepted </a>
        </button>
    </form>
</div>
